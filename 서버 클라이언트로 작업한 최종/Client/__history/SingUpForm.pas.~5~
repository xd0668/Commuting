{$R *.dfm}

uses ClientModuleUnit1, Login;

// 회원가입 버튼
procedure TSingUp.Button1Click(Sender: TObject);
begin
  ClientModule1.PERSONNEL.Post;
  clientmodule1.PERSONNEL.ApplyUpdates(-1);
  SingUp.Close;
  Form1.Show;
end;

// 회원가입 화면 종료시 메모리 제거
